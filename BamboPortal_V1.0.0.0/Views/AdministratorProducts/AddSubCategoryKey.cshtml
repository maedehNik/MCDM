                }
            });
        }
        function DeActivate(id_) {
            $("#deactivemodalID").val(id_);
        }
        function Activate(id) {
            $("#activemodalID").val(id);
        }
        function DeleteMC(id) {
            $("#deleteCusID").val(id)
        }
        function YesDeactivePlz() {

