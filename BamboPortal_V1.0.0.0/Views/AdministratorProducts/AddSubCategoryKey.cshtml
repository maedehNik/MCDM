@section scripts{
    @Scripts.Render("~/bundles/Select2.js")
    <script>
        $(document).ready(function () {
            $("#KeySubmit_ProcuctMainCategoryId").select2();
            $("#KeySubmit_ProductSubCategoryId").select2();
            $("#KeySubmit_ProductTypeId").select2();
            //select2:select
        });
        //End of document ready
        function URLSearchParams() {
            mApp.block("#AddSubCategoryKey", {
                overlayColor: "#2c2e3e", type: "loader", state: "success", message: "درحال چک کردن حریم دسترسی و دریافت اطلاعات از سمت سرور ..."
            });
            $("#KeySubmit_ProcuctMainCategoryId").val("");
            $("#KeySubmit_ProcuctMainCategoryId").html('<option value="0">هیچ موردی یافت نشد</option>');
            $("#KeySubmit_ProcuctMainCategoryId").select2();
            //End of mApp.Block
            const PostJson = {
                'PTypeID': $("#KeySubmit_ProductTypeId").val()
            };
            var HI = '';
            var _OI = 0;
            $.ajax({
                url: '/AdministratorProducts_FieldLoader/GetMainCateGoryForSelect2FromPTypeID',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var objectss = data;
                    var counter = objectss.length;
                    $("#KeySubmit_ProcuctMainCategoryId").select2("val", "");
                    for (_OI = 0; _OI < counter; _OI++) {
                        HI = HI + '<option value="' + data[_OI].Id + '">' + data[_OI].Value + '</option>';
                    }
                    if (HI.lenght == 0) {
                        HI = '<option value="0">هیچ موردی یافت نشد</option>';
                        swal("داده ایی یافت نشد!", data.Errormessage, "error");
                    }

                    $("#KeySubmit_ProcuctMainCategoryId").html(HI);
                    $("#KeySubmit_ProcuctMainCategoryId").select2();
                    setTimeout(function () {
                        mApp.unblock("#AddSubCategoryKey")
                    }, 1000);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    swal("مشکل در برقراری ارتباط با سرور", data.Errormessage, "error");
                    setTimeout(function () {
                        mApp.unblock("#AddSubCategoryKey")
                    }, 1000);

                }
            });
        }
        function URLSearchParamsProcuctMainCategoryId() {
            mApp.block("#AddSubCategoryKey", {
                overlayColor: "#2c2e3e", type: "loader", state: "success", message: "درحال چک کردن حریم دسترسی و دریافت اطلاعات از سمت سرور ..."
            });
            //End of mApp.Block
            $("#KeySubmit_ProductSubCategoryId").select2("val", "");
            $("#KeySubmit_ProductSubCategoryId").html('<option value="0">هیچ موردی یافت نشد</option>');
            $("#KeySubmit_ProductSubCategoryId").select2();

            const PostJson = {
                'MainCategoryId': $("#KeySubmit_ProcuctMainCategoryId").val()
            };
            var HI = '';
            var _OI = 0;
            $.ajax({
                url: '/AdministratorProducts_FieldLoader/GetSubCateGoryForSelect2FromMainCateGoryID',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
