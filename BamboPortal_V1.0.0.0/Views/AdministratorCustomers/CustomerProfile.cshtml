@section Scripts{
    @Scripts.Render("~/bundles/AdminCustomerProf.js")
    <script>

    //    $(document).ready(function () {
       
    //    $("#Ostan").select2();
    //    $("#CitySelect").select2();
    //});

        function SaveData() {
            var Id=@Model.CustomerModel.Id;
            var name = document.getElementById("firstname_cus").value;
            var last = document.getElementById("lastname_cus").value;
            var phone = document.getElementById("phone_cus").value;
            var email = document.getElementById("email_cus").value;
            var description = document.getElementById("des_cus").value;
            var FullAddress = document.getElementById("add_cust").value;
            var CodePosti = document.getElementById("pc_cust").value;
           // var CityId = $('#CitySelect').val();

            if (name != '' && last != '' && phone != '' && email != '') {
                const PostJson = {
                    'Id': Id,
                    'name': name,
                    'last': last,
                    'phone': phone,
                    'email': email,
                    'description': description,
                    'FullAddress': FullAddress,
                    'CodePosti': CodePosti,
                    'CityId': '12'
                };

                $.ajax({
                    url: '/AdministratorCustomers/UpdateCustomerData',
                    type: "post",
                    data: JSON.stringify(PostJson),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        if (data == "Success") {
                            //AlertToUser("deleteCus", data);
                            //$('#act').hide();
                            //$('#deAct').show();
                            alert("Okkkk");
                           // location.reload(true);
                        } else {
                            alert("مشکلی در ذخیره ی داده رخ داده");
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("مشکل در برقراری ارتباط با سرور");
                    }
                });
            } else {
                alert("لطفا همه ی مقادیر را پر کنید .")
            }

        }

        function CityChange() {
            var Id = $('#Ostan').val();
            alert(Id);
            $('#CitySelect').prop("disabled", false);
            const PostJson = {
                    'OstanId': Id
                };

                $.ajax({
                    url: '/AdministratorCustomers/City',
                    type: "post",
                    data: JSON.stringify(PostJson),
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        alert("done");
                         var token = response;
                    var s = "<option value=0 selected >انتخاب کنید</option>";
                    for (var i = 0; i < token.length; i++) {
                        s += "<option value=" + token[i].Id + ">" + token[i].Value + "</option>";
                    }

                    document.getElementById('CitySelect').innerHTML = s;
                         $("#CitySelect").select2();
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("مشکل در برقراری ارتباط با سرور");
                    }
                });
            return false;

        }




    </script>
}