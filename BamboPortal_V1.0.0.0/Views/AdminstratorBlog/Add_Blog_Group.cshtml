                                                <div class="form-group m-form__group col-lg-6 col-xs-12">
                                                    <div class="col-lg-12">

                                                        @Html.LabelFor(m => m.AddModel.GName, "نام گروه :", new { @class = "form-control-label" })
                                                        @Html.TextBoxFor(m => m.AddModel.GName, new { @class = "form-control m-input", @Value = Model.AddModel.GName, @placeholder = "نام گروه" })
                                                        @Html.ValidationMessageFor(m => m.AddModel.GName)
                                                    </div>
                                                </div>
                                                <div class="form-group m-form__group col-lg-6 col-xs-12" style="padding-top: 0;">
                                                    <div class="col-lg-12">
                                                        @Html.LabelFor(m => m.AddModel.GToken, "نشانه گروه (Token) :", new { @class = "form-control-label" })
                                                        @Html.TextBoxFor(m => m.AddModel.GToken, new { @class = "form-control m-input", @Value = Model.AddModel.GToken, @placeholder = "نشانه گروه (Token)" })
                                                        @Html.ValidationMessageFor(m => m.AddModel.GToken)
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group m-form__group col-lg-6 col-xs-12">
                                                    <div class="col-lg-12">
                                                        @Html.LabelFor(m => m.AddModel.GName, "در حال ویرایش گروه (" + Model.AddModel.GName + ") :", new { @class = "form-control-label" })
                                                        @Html.TextBoxFor(m => m.AddModel.GName, new { @class = "form-control m-input", @Value = Model.AddModel.GName, @placeholder = "نام گروه" })
                                                        @Html.ValidationMessageFor(m => m.AddModel.GName)
                                                    </div>
                                                </div>
                                                <div class="form-group m-form__group col-lg-6 col-xs-12" style="padding-top: 0;">
                                                    <div class="col-lg-12">
                                                        @Html.LabelFor(m => m.AddModel.GToken, "در حال ویرایش نشانه گروه (Token) (" + Model.AddModel.GToken + ") :", new { @class = "form-control-label" })
                                                        @Html.TextBoxFor(m => m.AddModel.GToken, new { @class = "form-control m-input", @Value = Model.AddModel.GToken, @placeholder = "نشانه گروه (Token)" })
                                                        @Html.ValidationMessageFor(m => m.AddModel.GToken)
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        @Html.TextBoxFor(m => m.AddModel.typeID, new { @class = "form-control m-input", @style = "display:none;", @Value = Model.AddModel.typeID, @placeholder = "نام گروه" })
                                        <div class="m-portlet__foot m-portlet__foot--fit">
                                            <div class="m-form__actions">
                                                <div class="row">
                                                    <div class="col-lg-12 tshtextleft" style="padding-left: 0;">
                                                        <button type="submit" id="AddBlogGroupSubmiter_SubmitBTN" class="btn btn-accent m-btn m-btn--air m-btn--custom">ثبت</button>&nbsp;&nbsp;
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="m_user_profile_tab_1">
                            <form class="m-form m-form--fit m-form--label-align-right" onsubmit="return false;" id="blgform">
                                <div class="m-portlet__body" style="padding-bottom: 0">
                                    <div class="col-12">
                                        <div>
                                            <div class="m-portlet__head-title container-fluid mt-4">
                                                <h3 class="m-portlet__head-text" style="font-size: 12px;border-bottom: 1px solid rgba(0,0,0,.1);padding-bottom: 17px;">
                                                    لیست گروه ها
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="container-fluid">
                                            <table class="cust-table table table-striped table-hover m-table m-table--head-separator-primary">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>نام گروه</th>
                                                        <th>نشانه گروه (Token)</th>
                                                        <th>وضعیت</th>
                                                        <th>عملیات</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.GroupList.Count != 0)
                                                    {
                                                        foreach (var item in Model.GroupList)
                                                        {
                                                            <input value="@item.GroupName" id="itemname-@item.GroupId" style="display:none" />
                                                    <tr>
                                                        <th scope="row">@item.Num</th>
                                                        <td>@item.GroupName</td>
                                                        <td>@item.GroupToken</td>
                                                        <td>
                                                            @if (item.IsDeleted == 1)
                                                            {
                                                                <button class="btn btn-danger tshpcustom deactivate-btn" data-name="@item.GroupName"><i class="fa fa-trash tshfa"></i>حذف شده</button>
                                                            }
                                                            else if (item.Disabled == 1)
                                                            {
                                                                <button class="btn btn-warning tshpcustom deactivate-btn" data-target="#ActivationModal" data-toggle="modal"
                                                                        id="btnAvailableType-@item.GroupId"
                                                                        onclick=" availableType('btnDesableType-@item.GroupId')">
                                                                    <i class="fa fa-minus-circle tshfa"></i> غیر فعال
                                                                </button>
                                                            }
                                                            else
                                                            {
                                                                @*<button class="btn btn-success tshpcustom deactivate-btn" data-target="#deactivemodal" data-toggle="modal" data-name="@item.CatName"><i class="fa fa-check tshfa"></i>فعال</button>*@
                                                                <button class="btn btn-success tshpcustom deactivate-btn" data-target="#deactivemodal" data-toggle="modal"
                                                                        id="btnDesableType-@item.GroupId"
                                                                        onclick=" DesableType('btnDesableType-@item.GroupId')">
                                                                    <i class="fa fa-check tshfa"></i> فعال
                                                                </button>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (item.IsDeleted == 0)
                                                            {
                                                                @*<button class="btn btn-danger tshpcustom cus-delete-btn" data-target="#deleteCus" data-toggle="modal" data-name="@item.CatName"><i class="fa fa-trash tshfa"></i>حذف</button>*@
                                                                <button id="btnDeleteType-@item.GroupId"
                                                                        onclick=" DeleteType('btnDeleteType-@item.GroupId')" class="btn btn-danger tshpcustom cus-delete-btn" data-target="#deleteCus" data-toggle="modal" data-name="...">
                                                                    <i class="fa fa-trash tshfa"></i>
                                                                </button>
                                                                <a href="@Url.Action("Add_Blog_Group","AdminstratorBlog",new {id=item.GroupId } )"
                                                                   class="btn btn-primary tshpcustom cus-delete-btn">
                                                                    <i class="fa fa-edit tshfa"></i>
                                                                </a>
                                                            }

                                                        </td>
                                                    </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <h3 class="m-badge m-badge--danger m-badge--wide">
                                                            موردی برای نمایش وجود ندارد.

                                                        </h3>
                                                    }

                                                </tbody>
                                            </table>
                                            <table style="display: none;" class="cust-table cust-table-2 table table-striped table-hover m-table m-table--head-separator-primary">
                                                <tr>
                                                    <th>#</th>
                                                    <td>1</td>

                                                </tr>
                                                <tr>
                                                    <th>نام گروه</th>
                                                    <td>بیلبیلک</td>
                                                </tr>
                                                <tr>
                                                    <th>نشانه گروه (Token)</th>
                                                    <td>12312312312312312312312</td>
                                                </tr>
                                                <tr>
                                                    <th>وضعیت</th>
                                                    <td>
                                                        <button class="btn btn-success tshpcustom deactivate-btn" data-target="#deactivemodal" data-toggle="modal" data-name="بیلبیلک"><i class="fa fa-check tshfa"></i>فعال</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>عملیات</th>
                                                    <td>
                                                        <button class="btn btn-danger tshpcustom cus-delete-btn" data-target="#deleteCus" data-toggle="modal" data-name="بیلبیلک"><i class="fa fa-trash tshfa"></i>حذف</button>
                                                    </td>
                                                </tr>
                                            </table>
                                            <div style="display:none" class="col-lg-12 mt-4 mb-4">
                                                <span class="col-lg-3">
                                                    صفحه
                                                    <span>50</span>
                                                    از
                                                    <span>170</span>
                                                </span>
                                                <ul class="tshpaglist col-lg-9 mb-5">
                                                    <li class="btn btn-brand disabled">قبلی</li>
                                                    <li class="btn btn-brand active-pag">1</li>
                                                    <li class="btn btn-brand">2</li>
                                                    <li class="btn btn-brand">3</li>
                                                    <li class="btn btn-brand">4</li>
                                                    <li class="btn btn-brand">5</li>
                                                    <li class="btn btn-brand">6</li>
                                                    <li class="btn btn-brand">7</li>
                                                    <li class="btn btn-brand">8</li>
                                                    <li class="btn btn-brand">9</li>
                                                    <li class="btn btn-brand">10</li>
                                                    <li class="btn btn-brand">بعدی</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deactivemodal" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <input value="" id="deactiveIdGetter" style="display:none" />

    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">غیرفعال سازی گروه </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    گروه
                    <span id="deactiveNameGetter"></span>
                    غیرفعال شود؟
                    
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر</button>
                <button onclick="deActiveModal()" id="deActiveModal_SubmitBTN" type="button" class="btn btn-warning">بله</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ActivationModal" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <input value="" id="activeIdGetter" style="display:none" />

    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">فعال سازی گروه </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    گروه
                    <span id="activeNameGetter"></span>
                    فعال شود؟

                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر</button>
                <button onclick="ActiveModal()" id="ActiveModal_SubmitBTN" type="button" class="btn btn-success">بله</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteCus" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <input value="" id="deleteCusIdGetter" style="display:none" />
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">پاک کردن گروه</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    گروه
                    <span id="deleteCusNameGetter"></span>
                    پاک شود؟
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر</button>
                <button onclick="DeleteModal()" id="DeleteModal_SubmitBTN" type="button" class="btn btn-danger">بله</button>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    @Scripts.Render("~/bundles/AdminstratorBlog.js")
    <script>
        function DesableType(id) {
            id = id.replace("btnDesableType-", "");

            $("#deactiveIdGetter").val(id);
            $("#deactiveNameGetter").text($("#itemname-" + id).val());

        }
        function availableType(id) {
            id = id.replace("btnDesableType-", "");
            $("#activeIdGetter").val(id);
            $("#activeNameGetter").text($("#itemname-" + id).val());
        }
        function DeleteType(id) {
            id = id.replace("btnDeleteType-", "");
            $("#deleteCusIdGetter").val(id);
            $("#deleteCusNameGetter").text($("#itemname-" + id).val());
        }
        function DeleteModal() {
            const PostJson = {
                'idTodelete': $("#deleteCusIdGetter").val()
            };

            $("#DeleteModal_SubmitBTN").addClass("m-loader m-loader--light m-loader--right").prop("disabled", true);
            $.ajax({
                url: '/AdminstratorBlog/DeleteBlogGroup',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.Errortype == "Success") {
                        AlertToUser("DeleteModal", data);
                    } else {
                        alert(data.Errormessage);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("مشکل در برقراری ارتباط با سرور");
                }
            });
        }
        function ActiveModal() {
            const PostJson = {
                'idToActive': $("#activeIdGetter").val()
            };

            $("#ActiveModal_SubmitBTN").addClass("m-loader m-loader--light m-loader--right").prop("disabled", true);
            $.ajax({
                url: '/AdminstratorBlog/ActiveBlogGroup',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.Errortype == "Success") {
                        AlertToUser("ActiveModal", data);
                    } else {
                        alert(data.Errormessage);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("مشکل در برقراری ارتباط با سرور");
                }
            });

        }
        function deActiveModal() {
            const PostJson = {
                'idToDEActive': $("#deactiveIdGetter").val()
            };

            $("#deActiveModal_SubmitBTN").addClass("m-loader m-loader--light m-loader--right").prop("disabled", true);
            $.ajax({
                url: '/AdminstratorBlog/DeActiveBlogGroup',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.Errortype == "Success") {
                        AlertToUser("deActiveModal", data);
                    } else {
                        alert(data.Errormessage);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("مشکل در برقراری ارتباط با سرور");
                }
            });

        }
    </script>
}

