                                        }

                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="m_user_profile_tab_1">
                            @*=========================================================== Form begins*@
                            @using (@Html.BeginForm("Add_Blog_Group", "AdminstratorBlog", FormMethod.Post, new { @id = "AddBlogGroupSubmiter", @class = "m-form m-form--fit m-form--label-align-right" }))
                            {
                                @Html.AntiForgeryToken();
                                <div class="m-portlet__body" style="padding-bottom: 0">
                                    <div class="col-12">
                                        <div class="row">

