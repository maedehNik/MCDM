@model BamboPortal_V1._0._0._0.ModelViews.CustomerSide.AboutUsModelView
@{
    ViewBag.Title = "درباره ما";
    Layout = "~/Views/SharedViewPages/CustomerSide/CustomerMaster.cshtml";
}

<!--====================================================================
                               Start Section Breadcrumb
   ====================================================================-->
<section class="section-breadcrumb overlay-color" style="background-image:url(@Url.Content("~/CustomerSide_desinerResource/assets/images/breadcrumb/1.jpg"))">
    <span class="bg-color bg-dark-60"></span>
    <div class="container pt-90 pb-90 vertical-wrap">
        <div class="vertical-inner text-center">
            <h1>درباره ما</h1>
        </div>
        <div class="breadcrumb-box">
            <div class="row row-0">
                <div class="col-12 col-sm-12">
                    <ol class="breadcrumb text-light">
                        <li>
                            <a href="@Url.Action("Index", "CustomerSide_Pages")" class="breadcrumb-icon">
                                <i class="fa fa-home"></i>
                            </a>
                        </li>
                        <li class="active">درباره ما</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
</section>
<!--====================================================================
                            End Section Breadcrumb
====================================================================-->
<!--====================================================================
                            Start Section About Us
====================================================================-->
<section class="section section-about-us section-about-us-1">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <div class="inner text-left">
                    <h2>
                        <span>درباره ما</span>
                        تیم حرفه ای ما بهترین خدمات و پشتیبانی عالی را به شما ارائه می دهد.
                    </h2>
                    <div class="divider divider-line"></div>
                    <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است.</p>
                    <p>ما به توسعه تجارت خود کمک می کنیم. ما بهترین خدمات را با بهترین نتایج ارائه می دهیم.</p>
                    <hr>
                    <div class="progress-item">
                        <span>خلاق</span>
                        <span class="progress-count">75%</span>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                        </div>
                    </div>
                    <div class="progress-item">
                        <span>کاره تیمی</span>
                        <span class="progress-count">90%</span>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%"></div>
                        </div>
                    </div>
                    <div class="progress-item">
                        <span>ایجاد طراحی</span>
                        <span class="progress-count">85%</span>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="width: 85%"></div>
                        </div>
                    </div>
                    <div class="progress-item">
                        <span>بازاریابی آنلاین</span>
                        <span class="progress-count">80%</span>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <div class="about-us-box overlay-pattern">
                    <img src="@Url.Content("~/CustomerSide_desinerResource/assets/images/about/about-us-1-1.jpg")" alt="Relevant textual alternative to the about us image">
                </div>
            </div>
        </div>
    </div>
</section>
<!--====================================================================
                            End Section About Us
====================================================================-->
<!--====================================================================
                            Start Section Users
====================================================================-->
<section class="section section-users section-users-1 bg-dark-10">
    <div class="container">
        <div class="section-title section-title-2 div-center text-center max-w-576">
            <h2>تیم ما</h2>
            <h3>با اعضای حرفه ای و مربیان خبره ما ملاقات کنید.</h3>
            <p>
                <span class="divider divider-line"></span>

            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model.TeamMembers)
            {
                <div class="col-6 col-sm-6 col-md-6 col-lg-3">
                    <div class="user-item bg-gradient-180">
                        <div class="user-image" style="background-image: url(@item.ImagePath);"></div>
                        <div class="user-details">
                            <h4 class="user-name">@item.Name</h4>
                            <p>@item.Job</p>
                            <ul class="user-social-icons">
                                <li>
                                    <a href="@item.Instagram">
                                        <i class="fa fa-instagram"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="@item.github">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="@item.Linkedin">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--====================================================================
                            End Section Users
====================================================================-->
<!--====================================================================
                            Start Section Features
====================================================================-->
